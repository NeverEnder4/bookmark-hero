{
  "name": "Bookmark Hero",
  "description": "The bookmark manager that saves the day.",
  "version": "0.1.0",
  "manifest_version": 2,
  "icons": {
    "16": "./logo-16.png",
    "32": "./logo-32.png",
    "48": "./logo-48.png",
    "124": "./logo-124.png"
  },
  "background": {
    "scripts": ["./background.js"]
  },
  "browser_action": {
    "default_popup": "./popup/popup.html"
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval' https://buttons.github.io; object-src 'self'",
  "permissions": [
    "tabs",
    "bookmarks"
  ]
}